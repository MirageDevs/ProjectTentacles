<!doctype html>
<html lang="en" class="h-100">
  <head>
    <%- 
    include('./component/meta', {
      appTitle: appTitle, 
      appDescription: appDescription, 
      ogTitle: ogTitle, 
      ogDescription: ogDescription, 
      ogUrl: ogUrl, 
      ogImage: ogImage
    }); 
    -%>
  </head>
  <body class="d-flex text-white bg-dark" style="min-height: 100%;">
    
    <div class="container d-flex w-100 p-3 mx-auto flex-column" style="min-height: 100%; max-width: 72em;">
      <%- include('./component/header'); -%>
      <main class="px-3" style="min-height: 100%;">
        <div style="max-width: 42rem; margin-top: 5rem; margin-left: auto; margin-right: auto;">
          <div class="row">
            <% if (!_.isEmpty(cactus)) { %>
            <div class="col-lg-6 col-md-6 col-sm-6 col-12 mb-2" style="padding-left: 30px; padding-right: 30px;">
              <div>
                <h3 class="cactus-rank">Rank #<%= cactus.rarity_rank %></h3>
                <% if (content_image_is_video) { %>
                <video class="cactus-avatar" style="<% if (content_image_frame=='rectangle') { %> border-radius: 10px; <% } %>" src="<%= cactus.image.replace('ipfs://', 'https://ipfs.io/ipfs/'); %>" alt="<%= cactus.name %>" /></video>
                <% } else { %>
                <img class="cactus-avatar" style="<% if (content_image_frame=='rectangle') { %> border-radius: 10px; <% } %>" src="<%= cactus.image.replace('ipfs://', 'https://ipfs.io/ipfs/'); %>" alt="<%= cactus.name %>" />
                <% } %>
                <div class="cactus-info text-center mt-4">
                  <span><%= cactus.name %></span>
                </div>
              </div>
              <div class="mt-3 mb-3">
                <!--
                <div class="cactus-description dont-break-out">
                  <%- md.render(cactus.description) %>
                </div>
                -->
                
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-12 mb-2" >
              <div class="rarity-score-block">
                <h4 class="text-center">Rarity Score</h4>
                <div class="rarity-score-sum">
                    <%= cactuscore.rarity_sum.toFixed(2) %>
                </div>
              </div>
              <% allTraitTypes.forEach(function(traitType) { %>
                <div class="mt-4">
                  <div class="row">
                    <div class="col-6">
                      <h3 class="trait-type"><%= traitType.trait_type %></h3>
                    </div>
                    <div class="col-6 trait-type-rarity">
                      +<%= cactuscore['trait_type_'+traitType.id+'_rarity'].toFixed(2) %>
                    </div>
                  </div>
                  <div class="d-flex trait-value-block">
                    <div class="flex-grow-1 trait-value">
                      <% if (cactusTraitData.hasOwnProperty(traitType.id)) { %>
                        <%
                        if (traitType.trait_data_type == 'date') {
                          let date = new Date((cactusTraitData[traitType.id]-29)*1000);
                          %>
                          <%= date.toLocaleString("en-US") %>
                          <%
                        } else {
                          %>
                          <%= cactusTraitData[traitType.id] %>
                          <%
                        }
                        %>
                      <% } else { %>
                        None (Missing Trait)
                      <% } %>
                    </div>
                    <div class="trait-value-count">
                      <% if (cactusTraitData.hasOwnProperty(traitType.id)) { %>
                        <%= allDetailTraitTypesData[traitType.id+'|||'+cactusTraitData[traitType.id]] %>
                      <% } else { %>
                        <%= (totalcactusCount-traitType.cactus_count) %>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% }); %>
              <div class="mt-4">
                <div class="row">
                  <div class="col-6">
                    <h3 class="trait-type">Attribute Count</h3>
                  </div>
                  <div class="col-6 trait-type-rarity">
                    +<%= cactuscore['trait_count_rarity'].toFixed(2) %>
                  </div>
                </div>
                <div class="d-flex trait-value-block">
                  <div class="flex-grow-1 trait-value">
                    <%= Object.keys(ignoredcactusTraitData).length %>
                  </div>
                  <div class="trait-value-count">
                    <%= allTraitCountTypesData[Object.keys(ignoredcactusTraitData).length] %>
                  </div>
                </div>
              </div>
            </div>
            <% } else { %>
              <h1 class="text-center">
                There's no result.
              </h1>
            <% } %>
          </div>
        </div>
      </main>
      <%- include('./component/footer'); -%>
    </div>
  </body>
</html>